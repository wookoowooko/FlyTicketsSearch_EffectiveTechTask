<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/tickets_16dp"
        android:layout_marginTop="@dimen/tickets_8dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ticket_offer_image"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="@null" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/tickets_8dp"
            android:orientation="vertical">

            <LinearLayout
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/company_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/light_italic"
                    android:gravity="start"
                    android:lineHeight="16.8dp"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/bold_italic"
                    android:gravity="end"
                    android:lineHeight="16.8dp"
                    android:textColor="@color/special_blue"
                    android:textSize="14sp"
                    app:drawableEndCompat="@drawable/arr" />
            </LinearLayout>

            <TextView
                android:id="@+id/departure_times"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="@dimen/tickets_8dp"
                android:ellipsize="end"
                android:fontFamily="@font/regular"
                android:lineHeight="16.8dp"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="@dimen/tickets_16dp"
        android:layout_marginTop="@dimen/tickets_10dp"
        app:dividerColor="@color/grey_four" />
</LinearLayout>