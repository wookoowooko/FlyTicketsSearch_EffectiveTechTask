<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/standard_bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey_two"
    android:padding="16dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">


    <com.google.android.material.bottomsheet.BottomSheetDragHandleView
        android:id="@+id/dragHandle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/search_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginTop="48dp"
            app:cardBackgroundColor="@color/grey_three"
            app:cardCornerRadius="@dimen/tickets_16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/tickets_8dp"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/edit_text_from1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_margin="@dimen/tickets_8dp"
                    android:autofillHints="@null"
                    android:background="@null"
                    android:drawableStart="@drawable/fly_search"
                    android:drawablePadding="@dimen/tickets_8dp"
                    android:fontFamily="@font/regular"
                    android:hint="@string/tickets_from_hint"
                    android:inputType="text"
                    android:textColor="?attr/colorOnPrimary"
                    android:textColorHint="@color/grey_six"
                    android:textFontWeight="600"
                    android:textSize="16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="@dimen/tickets_8dp"
                    android:background="@color/grey_seven" />

                <EditText
                    android:id="@+id/edit_text_where2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/tickets_8dp"
                    android:autofillHints="@null"
                    android:background="@null"
                    android:drawableStart="@drawable/ic_search_24"
                    android:drawableEnd="@drawable/ic_close"
                    android:drawablePadding="@dimen/tickets_8dp"
                    android:fontFamily="@font/regular"
                    android:hint="@string/tickets_where_hint"
                    android:inputType="text"
                    android:textColor="?attr/colorOnPrimary"
                    android:textColorHint="@color/grey_six"
                    android:textFontWeight="600"
                    android:textSize="16sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tickets_26dp"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:weightSum="4">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    app:cardBackgroundColor="@color/special_green"
                    app:cardCornerRadius="@dimen/tickets_8dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_hard_way" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_marginTop="@dimen/tickets_8dp"
                    android:fontFamily="@font/regular"
                    android:gravity="center"
                    android:lineHeight="16.8dp"
                    android:text="@string/hard_way"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    app:cardBackgroundColor="@color/special_blue"
                    app:cardCornerRadius="@dimen/tickets_8dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_everywhere" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_marginTop="@dimen/tickets_8dp"
                    android:fontFamily="@font/regular"
                    android:gravity="center"
                    android:lineHeight="16.8dp"
                    android:text="@string/everywhere"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    app:cardBackgroundColor="@color/special_dark_blue"
                    app:cardCornerRadius="@dimen/tickets_8dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_calendar" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_marginTop="@dimen/tickets_8dp"
                    android:fontFamily="@font/regular"
                    android:gravity="center"
                    android:lineHeight="16.8dp"
                    android:text="@string/days_off"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    app:cardBackgroundColor="@color/special_orange"
                    app:cardCornerRadius="@dimen/tickets_8dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_fire" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_marginTop="@dimen/tickets_8dp"
                    android:fontFamily="@font/regular"
                    android:gravity="center"
                    android:lineHeight="16.8dp"
                    android:text="@string/fire_tickets"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </LinearLayout>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tickets_26dp"
            app:cardBackgroundColor="@color/grey_three"
            app:cardCornerRadius="@dimen/tickets_16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="@dimen/tickets_16dp"
                    android:layout_weight="2"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:cardCornerRadius="8dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:contentDescription="@null"
                            android:scaleType="centerCrop"
                            android:src="@drawable/istanbul" />
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_marginHorizontal="@dimen/tickets_8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:lineHeight="19.2dp"
                            android:textColor="@color/white"
                            android:textFontWeight="600"
                            android:textSize="16sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/istanbul" />

                        <TextView
                            android:lineHeight="19.2dp"
                            android:textColor="@color/grey_five"
                            android:textFontWeight="400"
                            android:textSize="14sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/popular" />

                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="@dimen/tickets_16dp"
                    android:layout_weight="2"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:cardCornerRadius="8dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:contentDescription="@null"
                            android:scaleType="centerCrop"
                            android:src="@drawable/sochi" />
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_marginHorizontal="@dimen/tickets_8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:lineHeight="19.2dp"
                            android:textColor="@color/white"
                            android:textFontWeight="600"
                            android:textSize="16sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/sochi_text" />

                        <TextView
                            android:lineHeight="19.2dp"
                            android:textColor="@color/grey_five"
                            android:textFontWeight="400"
                            android:textSize="14sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/popular" />

                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="@dimen/tickets_16dp"
                    android:layout_weight="2"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:cardCornerRadius="8dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:contentDescription="@null"
                            android:scaleType="centerCrop"
                            android:src="@drawable/phuket" />
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_marginHorizontal="@dimen/tickets_8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:lineHeight="19.2dp"
                            android:textColor="@color/white"
                            android:textFontWeight="600"
                            android:textSize="16sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/phuket" />

                        <TextView
                            android:lineHeight="19.2dp"
                            android:textColor="@color/grey_five"
                            android:textFontWeight="400"
                            android:textSize="14sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/popular" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</FrameLayout>
