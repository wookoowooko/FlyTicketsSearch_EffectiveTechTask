<?xml version="1.0" encoding="utf-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="@dimen/tickets_16dp">

    <LinearLayout
        android:id="@+id/customAppBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/grey_two"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/tickets_8dp">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="@null"
            android:src="@drawable/arrow_back" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/tickets_16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fromText"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="600"
                android:fontFamily="@font/bold"
                android:lineHeight="19.5dp"
                android:text="Москва-Сочи"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/toText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/regular"
                android:text="23 февраля, 1 пассажир"
                android:textColor="@color/grey_six"
                android:textFontWeight="500"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Основной контент -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_marginBottom="64dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/tickets_8dp"
                app:cardBackgroundColor="@color/gray_one"
                app:cardCornerRadius="@dimen/tickets_8dp"
                app:layout_constraintTop_toTopOf="@+id/cardView2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/text_16sp"
                        android:layout_marginTop="21dp"
                        android:fontFamily="@font/bold"
                        android:lineHeight="26.4dp"
                        android:text="6 990 ₽"
                        android:textColor="@color/white"
                        android:textFontWeight="600"
                        android:textSize="22sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/tickets_16dp"
                        android:layout_marginTop="@dimen/tickets_16dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:src="@drawable/special_orange_placeholder" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/tickets_8dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/light_italic"
                                    android:lineHeight="16.8dp"
                                    android:text="17:45"
                                    android:textColor="@color/white"
                                    android:textSize="14sp" />

                                <View
                                    android:layout_width="10dp"
                                    android:layout_height="1dp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginHorizontal="@dimen/tickets_8dp"
                                    android:background="@color/grey_six" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/light_italic"
                                    android:lineHeight="16.8dp"
                                    android:text="21:20"
                                    android:textColor="@color/white"
                                    android:textSize="14sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/light_italic"
                                    android:lineHeight="16.8dp"
                                    android:text="DME"
                                    android:textColor="@color/grey_six"
                                    android:textSize="14sp" />

                                <View
                                    android:layout_width="10dp"
                                    android:layout_height="0dp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginHorizontal="@dimen/tickets_8dp"
                                    android:background="@color/grey_six" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/light_italic"
                                    android:lineHeight="16.8dp"
                                    android:text="AER"
                                    android:textColor="@color/grey_six"
                                    android:textSize="14sp" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/tickets_16dp"
                                android:fontFamily="@font/regular"
                                android:lineHeight="16.8dp"
                                android:text="3.5ч в пути"
                                android:textColor="@color/white"
                                android:textSize="14sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/regular"
                                android:lineHeight="16.8dp"
                                android:text=" / Без пересадок"
                                android:textColor="@color/white"
                                android:textSize="14sp" />

                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/special_blue"
                app:cardCornerRadius="50dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/tickets_10dp"
                    android:layout_marginVertical="2dp"
                    android:fontFamily="@font/bold_italic"
                    android:text="Самый удобный"
                    android:textColor="@color/white" />
            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Floating Action Button -->
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="@dimen/tickets_16dp"
        android:backgroundTint="@color/special_blue"
        app:cardCornerRadius="50dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_filters"
                android:drawablePadding="4dp"
                android:fontFamily="@font/light_italic"
                android:lineHeight="16.8dp"
                android:text="Фильтр"
                android:textColor="@color/white"
                android:textSize="@dimen/text_14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/tickets_16dp"
                android:drawableStart="@drawable/ic_graphic"
                android:drawablePadding="4dp"
                android:fontFamily="@font/light_italic"
                android:lineHeight="16.8dp"
                android:text="График цен"
                android:textColor="@color/white"
                android:textSize="@dimen/text_14sp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
