<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    android:padding="@dimen/tickets_16dp">

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/tickets_16dp"
                android:paddingEnd="@dimen/text_16sp"
                app:cardBackgroundColor="@color/grey_three"
                app:cardCornerRadius="50dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/tickets_8dp"
                    android:drawableStart="@drawable/ic_add"
                    android:drawablePadding="@dimen/tickets_8dp"
                    android:fontFamily="@font/light_italic"
                    android:gravity="center_vertical"
                    android:text="@string/back"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/tickets_16dp"
                android:paddingEnd="@dimen/text_16sp"
                app:cardBackgroundColor="@color/grey_three"
                app:cardCornerRadius="50dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/tickets_8dp"
                    android:layout_marginEnd="@dimen/tickets_16dp"
                    android:drawablePadding="@dimen/tickets_8dp"
                    android:fontFamily="@font/light_italic"
                    android:gravity="center_vertical"
                    android:text="24 фев, сб"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/tickets_16dp"
                android:paddingEnd="@dimen/text_16sp"
                app:cardBackgroundColor="@color/grey_three"
                app:cardCornerRadius="50dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/tickets_8dp"
                    android:drawableStart="@drawable/ic_passenger"
                    android:drawablePadding="@dimen/tickets_8dp"
                    android:fontFamily="@font/light_italic"
                    android:gravity="center_vertical"
                    android:text="1,эконом"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="@dimen/text_16sp"
                app:cardBackgroundColor="@color/grey_three"
                app:cardCornerRadius="50dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/tickets_8dp"
                    android:drawableStart="@drawable/ic_filters"
                    android:drawablePadding="@dimen/tickets_8dp"
                    android:fontFamily="@font/light_italic"
                    android:gravity="center_vertical"
                    android:text="@string/filters"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </HorizontalScrollView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/tickets_16dp"
        app:cardBackgroundColor="@color/gray_one"
        app:cardCornerRadius="@dimen/tickets_16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tickets_16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/tickets_16dp"
                android:lineHeight="24dp"
                android:text="@string/races"
                android:textColor="@color/white"
                android:textFontWeight="600"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/tickets_16dp"
                    android:layout_marginTop="@dimen/tickets_8dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:contentDescription="@null"
                        android:src="@drawable/special_blue_placeholder" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/tickets_8dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/bold_italic"
                                android:gravity="start"
                                android:lineHeight="16.8dp"
                                android:text="Уральские авиалинии"
                                android:textColor="@color/white"
                                android:textSize="14sp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:drawableEnd="@drawable/arr"
                                android:fontFamily="@font/bold_italic"
                                android:gravity="end"
                                android:lineHeight="16.8dp"
                                android:text="2 390 ₽"
                                android:textColor="@color/special_blue"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:layout_marginEnd="@dimen/tickets_8dp"
                            android:ellipsize="end"
                            android:fontFamily="@font/regular"
                            android:lineHeight="16.8dp"
                            android:maxLines="1"
                            android:text="07:00  09:10   10:00  11:00  12:00  13:00  12:00   12:00 12:00 12:00 12:00   "
                            android:textColor="@color/white"
                            android:textSize="14sp" />
                    </LinearLayout>

                </LinearLayout>

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="@dimen/tickets_16dp"
                    android:layout_marginTop="@dimen/tickets_10dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/tickets_16dp"
                    android:layout_marginTop="@dimen/tickets_8dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:contentDescription="@null"
                        android:src="@drawable/special_orange_placeholder" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/tickets_8dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/bold_italic"
                                android:gravity="start"
                                android:lineHeight="16.8dp"
                                android:text="Уральские авиалинии"
                                android:textColor="@color/white"
                                android:textSize="14sp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:drawableEnd="@drawable/arr"
                                android:fontFamily="@font/bold_italic"
                                android:gravity="end"
                                android:lineHeight="16.8dp"
                                android:text="2 390 ₽"
                                android:textColor="@color/special_blue"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:layout_marginEnd="@dimen/tickets_8dp"
                            android:ellipsize="end"
                            android:fontFamily="@font/regular"
                            android:lineHeight="16.8dp"
                            android:maxLines="1"
                            android:text="07:00  09:10   10:00  11:00  12:00  13:00  12:00   12:00 12:00 12:00 12:00   "
                            android:textColor="@color/white"
                            android:textSize="14sp" />
                    </LinearLayout>

                </LinearLayout>

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="@dimen/tickets_16dp"
                    android:layout_marginTop="@dimen/tickets_10dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/tickets_16dp"
                    android:layout_marginTop="@dimen/tickets_8dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:contentDescription="@null"
                        android:src="@drawable/special_white_placeholder" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/tickets_8dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/bold_italic"
                                android:gravity="start"
                                android:lineHeight="16.8dp"
                                android:text="Уральские авиалинии"
                                android:textColor="@color/white"
                                android:textSize="14sp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:drawableEnd="@drawable/arr"
                                android:fontFamily="@font/bold_italic"
                                android:gravity="end"
                                android:lineHeight="16.8dp"
                                android:text="2 390 ₽"
                                android:textColor="@color/special_blue"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:layout_marginEnd="@dimen/tickets_8dp"
                            android:ellipsize="end"
                            android:fontFamily="@font/regular"
                            android:lineHeight="16.8dp"
                            android:maxLines="1"
                            android:text="07:00  09:10   10:00  11:00  12:00  13:00  12:00   12:00 12:00 12:00 12:00   "
                            android:textColor="@color/white"
                            android:textSize="14sp" />
                    </LinearLayout>

                </LinearLayout>

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="@dimen/tickets_16dp"
                    android:layout_marginTop="@dimen/tickets_10dp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="@dimen/tickets_16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="@dimen/tickets_8dp"
                android:fontFamily="@font/regular"
                android:gravity="center"
                android:lineHeight="20.8dp"
                android:padding="@dimen/tickets_8dp"
                android:text="@string/show_all"
                android:textAlignment="center"
                android:textColor="@color/special_blue"
                android:textSize="@dimen/text_16sp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        app:cardBackgroundColor="@color/special_blue"
        app:cardCornerRadius="@dimen/tickets_8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bold_italic"
            android:gravity="center"
            android:lineHeight="20.8dp"
            android:padding="11dp"
            android:text="@string/all_tikets_button"
            android:textColor="@color/white"
            android:textSize="@dimen/tickets_16dp" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:cardBackgroundColor="@color/grey_two"
        app:cardCornerRadius="@dimen/tickets_8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/tickets_8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:drawableStart="@drawable/ic_notifications"
                android:drawablePadding="@dimen/tickets_8dp"
                android:drawableTint="@color/special_blue"
                android:gravity="start"
                android:lineHeight="19.2dp"
                android:text="@string/price_label"
                android:textColor="@color/white"
                android:textFontWeight="400"
                android:textSize="@dimen/text_16sp" />

            <Switch
                android:id="@+id/simpleSwitch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="end"
                android:thumbTint="@color/white"
                android:trackTint="@color/white" />
        </LinearLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>