<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="67dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="132dp"
        android:layout_height="132dp"
        android:background="@null"
        app:cardCornerRadius="@dimen/tickets_10dp">

        <ImageView
            android:scaleType="centerCrop"
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@null"
            android:src="@drawable/ic_search" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/tickets_8dp"
        android:layout_weight="600"
        android:text="@string/stub_placeholder_name_artist"
        android:textColor="@color/white"
        android:textSize="@dimen/text_16sp" />

    <TextView
        android:id="@+id/town"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/tickets_8dp"
        android:layout_weight="400"
        android:text="@string/stub_town"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/tickets_8dp"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:text="от 22 264 ₽"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:drawableLeftCompat="@drawable/ic_fly_24"
        tools:ignore="HardcodedText" />


</LinearLayout>